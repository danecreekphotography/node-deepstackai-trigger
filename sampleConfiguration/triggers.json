{
  "$schema": "https://raw.githubusercontent.com/danecreekphotography/node-deepstackai-trigger/master/src/schemas/triggerConfiguration.schema.json",
  "triggers": [
    {
      "name": "Cat detector",
      "watchPattern": "/aiinput/Cat*.jpg",
      "enabled": true,
      "threshold": {
        "minimum": 10,
        "maximum": 90
      },
      "handlers": {
        "webRequest": {
          "triggerUris": ["http://localhost:81/admin?trigger&camera=Cat"]
        },
        "mqtt": {
          "topic": "aimotion/triggers/cat"
        },
        "telegram": {
          "chatIds": [1],
          "cooldownTime": 60
        }
      },
      "watchObjects": ["cat"]
    },
    {
      "name": "Dog detector",
      "watchPattern": "/aiinput/Dog*.jpg",
      "enabled": true,
      "threshold": {
        "minimum": 50,
        "maximum": 100
      },
      "handlers": {
        "webRequest": {
          "triggerUris": ["http://localhost:81/admin?trigger&camera=Dog&memo={{formattedPredictions}}"]
        },
        "mqtt": {
          "messages": [{ "topic": "aimotion/triggers/dog" }]
        },
        "telegram": {
          "caption": "{{name}}: {{formattedPredictions}}",
          "chatIds": [1],
          "cooldownTime": 60
        }
      },
      "watchObjects": ["dog"]
    }
  ]
}
