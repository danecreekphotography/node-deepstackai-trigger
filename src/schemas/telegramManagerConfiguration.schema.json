{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/danecreekphotography/node-deepstackai-trigger/main/src/schemas/telegramManagerConfiguration.schema.json",
  "type": "object",
  "title": "The configuration for Telegram",
  "description": "Defines the connection information for Telegram to send trigger notifications.",
  "required": ["botToken"],
  "properties": {
    "botToken": {
      "description": "The access token for Telegram.",
      "type": "string",
      "examples": ["1122334455:AABBCCDDEEFFGGhhiijjkkllmm"]
    },
    "enabled": {
      "description": "Enables Telegram bot messages.",
      "type": "boolean",
      "default": true,
      "examples": ["false"]
    }
  }
}
